% Style file to format Carleton comps papers
% Author: Andrew Gainer-Dewar, 2013
\ProvidesPackage{cccomps}

%% LOAD SUPPORTING PACKAGES

% We want to use US letter paper with one-inch margins
\RequirePackage{geometry}
\geometry{letterpaper, margin=1.0in}

% We should support UTF-8 in the input file (since it is the twenty-first
% century, after all)
\RequirePackage[utf8]{inputenc}

% And we should use T1 for the output encoding, because the default results
% in a big mess with accented characters in the PDF
\RequirePackage[T1]{fontenc}

% The Babel package modernizes the hyphenation routines.
% Here, we configure it to use US English.
\RequirePackage[american]{babel}

% The microtype package fixes a lot of small typographical things.
% They're hard to see, but your eyes will thank you!
\RequirePackage{microtype}

% The graphicx package is used for handling graphics and colors.
\RequirePackage{graphicx}

% The amsmath and amssymb packages provide some important mathematical support
\RequirePackage{amsmath,amssymb}

% The amsthm package lets us set up theorem-like environments
\RequirePackage{amsthm}

% We then need to actually create those environments
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{observation}[theorem]{Observation}

\newtheorem*{theorem*}{Theorem}
\newtheorem*{corollary*}{Corollary}
\newtheorem*{lemma*}{lemma}
\newtheorem*{proposition*}{Proposition}
\newtheorem*{observation*}{Observation}

\theoremstyle{definition}
\newtheorem{definition}[theorem]{Definition}
\newtheorem*{definition*}{Definition}

\theoremstyle{remark}
\newtheorem{remark}[theorem]{Remark}
\newtheorem*{remark*}{Remark}

\newtheorem{example}[theorem]{Example}
\newtheorem*{example*}{Example}

\newtheorem{note}[theorem]{Note}
\newtheorem*{note*}{Note}

% The cleveref package handles a lot of fanciness with internal cross-references.
\RequirePackage[capitalize]{cleveref}

% The booktabs package facilitates high-quality table formatting.
\RequirePackage{booktabs}

% The hyperref package sets up PDF hyperlinks and other fanciness.
% WARNING: THIS MUST BE THE LAST PACKAGE LOAD
\RequirePackage{hyperref}

\newcommand{\advisor}[1]{\gdef\@advisor{#1}}
\newcommand{\dept}[1]{\gdef\@dept{#1}}

%% CONFIGURE LAYOUTS
% First, we configure the title page.
\renewcommand{\maketitle}{
  \null
  \thispagestyle{empty}
  \vspace*{\fill}
  \begin{center}
    {\HUGE\bfseries\boldmath\@title} \\
    \vspace{1.0in}
    {\Large A Senior Comprehensive Paper \\}
    \vspace{1.0in}
    {\Large presented to \\ the Faculty of Carleton College \\ Department of \@dept \\ \@advisor, Advisor \\}
    \vspace{1.0in}
    {\Large by \\ \begin{tabular}[t]{c} \@author \end{tabular} \\}
    \vspace{1.0in}
    {\Large \@date}
  \end{center}
  \vspace*{\fill}
  \null
  \cleardoublepage
}

% Next, we configure the chapter style
\chapterstyle{verville}

% We also reconfigure the abstract from memoir's default (which doesn't sit on
% its own page)
\renewenvironment{abstract}{\chapter{Abstract}}{\cleardoublepage}

% Memoir only numbers down to sections by default. We need to go deeper.
\setsecnumdepth{subsubsection}